BOT_TOKEN=
DATABASE_URL=
ADMIN_USERNAME=admin
# Пароль администратора в открытом виде (альтернатива ADMIN_PASSWORD_HASH)
ADMIN_PASSWORD=
# Хэш пароля администратора, сгенерированный через Argon2
ADMIN_PASSWORD_HASH=
ADMIN_SESSION_SECRET=
ADMIN_SESSION_COOKIE=bsuir_admin_sid

# Настройки Heroku Inference AI (опционально)
INFERENCE_KEY=
INFERENCE_MODEL_ID=claude-4-5-sonnet
INFERENCE_URL=https://eu.inference.heroku.com
INFERENCE_TIMEOUT_MS=10000

# Recommendation engine / ML
# RECOMMENDER_MODE: rules | tfidf | hybrid
# - rules: default rule-based recommendation
# - tfidf: content-only TF‑IDF baseline
# - hybrid: blend of rules + content (use RECOMMENDER_ALPHA/BETA)
RECOMMENDER_MODE=rules
# Weights used when RECOMMENDER_MODE=hybrid (alpha for rules, beta for tfidf)
# Values between 0..1, alpha+beta should be 1.0 in typical configs.
RECOMMENDER_ALPHA=0.6
RECOMMENDER_BETA=0.4

# Optional: if you want improved Russian stemming, install `snowball-stemmer.jsx`
# locally; the service will import it dynamically if present. No env var required.
# npm install snowball-stemmer.jsx

# Optional: enable tracing or debug: set to true to see more logs
RECOMMENDER_DEBUG=false
