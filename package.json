{
  "name": "bsuir-sport-marketing-bot",
  "version": "1.5.1",
  "description": "Telegram bot prototype for recommending educational sports sections based on user preferences and physical data.",
  "type": "module",
  "scripts": {
    "build": "bun run build:admin && bun run build:bot",
    "prebuild": "bunx prisma generate",
    "build:admin": "bun x vite build --config admin/web/vite.config.ts",
    "build:bot": "bun build src/index.ts --target bun --outfile dist/server.js",
    "heroku-postbuild": "bun run build",
    "migrate:deploy": "bun x prisma db push && bun x prisma db seed",
    "start": "bun dist/server.js",
    "predev": "bunx prisma generate",
    "dev": "bun x tsx src/index.ts",
    "dev:admin": "bun x vite dev --config admin/web/vite.config.ts",
    "dev:server": "bun x tsx src/index.ts",
    "pretest": "bunx prisma generate",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "bun x eslint --ext .ts,.tsx src admin/web/src test",
    "coverage": "bun test --coverage",
    "coverage:ci": "bun test --coverage",
    "lock:migrate": "bun pm migrate",
    "start:node": "node dist/server.js",
    "build:admin:bun": "bun build admin/web/src/main.tsx --outdir admin/web/dist --minify --target=es2022"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.8",
    "@prisma/adapter-pg": "7.2.0",
    "@prisma/client": "7.2.0",
    "@tanstack/react-query": "^5.90.18",
    "chart.js": "^4.5.1",
    "pg": "^8.17.1",
    "react": "^19.2.3",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.12.0",
    "telegraf": "^4.16.3",
    "zod": "^4.3.5",
    "json-2-csv": "^5.5.10",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz"
  },
  "overrides": {
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@happy-dom/global-registrator": "^20.3.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.9",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-react": "^5.1.2",
    "bun-types": "^1.3.6",
    "c8": "^10.1.3",
    "eslint": "^9.39.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.4.0",
    "prisma": "7.2.0",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1"
  },
  "packageManager": "bun@1.3.5"
}
