{
  "name": "bsuir-sport-marketing-bot",
  "version": "0.1.0",
  "private": true,
  "description": "Telegram bot prototype for recommending educational sports sections based on user preferences and physical data.",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "tsc",
    "build:admin-api": "npm run build --workspace @bsuir/admin-api",
    "heroku-postbuild": "npm run build && npm run build:admin-api",
    "start": "node dist/index.js",
    "start:bot": "node dist/index.js",
    "start:admin-api": "npm run start --workspace @bsuir/admin-api",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint --ext .ts src test",
    "coverage": "c8 --reporter=text --reporter=lcov npm test",
    "coverage:ci": "c8 --reporter=lcov --reporter=text npm test",
    "build:packages": "npm run build --workspace @bsuir-admin/types && npm run build --workspace @bsuir-admin/config && npm run build --workspace @bsuir-admin/logger && npm run build --workspace @bsuir-admin/ui"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "ts-node": "^10.9.2",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5",
    "vitest": "^1.0.0",
    "c8": "^7.12.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0"
  },
  "engines": {
    "node": "18.x"
  }
}
