{
  "name": "bsuir-sport-marketing-bot",
  "version": "0.1.0",
  "description": "Telegram bot prototype for recommending educational sports sections based on user preferences and physical data.",
  "type": "module",
  "scripts": {
    "build": "npm run build:admin && npm run build:bot",
    "build:admin": "vite build --config admin/web/vite.config.ts",
    "build:bot": "tsc",
    "heroku-postbuild": "npm run build",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:admin": "vite dev --config admin/web/vite.config.ts",
    "dev:server": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint --ext .ts src test",
    "coverage": "c8 --reporter=text --reporter=lcov npm test",
    "coverage:ci": "c8 --reporter=lcov --reporter=text npm test"
  },
  "dependencies": {
    "@fastify/cookie": "^10.0.0",
    "@fastify/csrf-protection": "^6.0.0",
    "@fastify/helmet": "^12.0.0",
    "@fastify/sensible": "^5.0.1",
    "@fastify/session": "^10.0.0",
    "@fastify/static": "^8.0.0",
    "@prisma/client": "^5.17.0",
    "@tanstack/react-query": "^5.51.3",
    "argon2": "^0.41.1",
    "chart.js": "^4.4.4",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "pino": "^9.4.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "telegraf": "^4.16.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.3",
    "@types/node": "^20.12.12",
    "@vitejs/plugin-react": "^4.3.1",
    "prisma": "^5.17.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.11.0",
    "typescript": "5.1.6",
    "vite": "^5.4.0",
    "vitest": "^1.0.0",
    "c8": "^7.12.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0"
  },
  "engines": {
    "node": "18.x"
  }
}
