{
  "name": "bsuir-sport-marketing-bot",
  "version": "1.0.0",
  "description": "Telegram bot prototype for recommending educational sports sections based on user preferences and physical data.",
  "type": "module",
  "scripts": {
    "build": "npm run build:admin && npm run build:bot",
    "build:admin": "vite build --config admin/web/vite.config.ts",
    "build:bot": "tsc",
    "heroku-postbuild": "npm run build",
    "migrate:deploy": "prisma migrate deploy",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:admin": "vite dev --config admin/web/vite.config.ts",
    "dev:server": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint --ext .ts,.tsx src admin/web/src test",
    "coverage": "c8 --reporter=text --reporter=lcov npm test",
    "coverage:ci": "c8 --reporter=lcov --reporter=text npm test"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/csrf-protection": "^7.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/sensible": "^6.0.3",
    "@fastify/session": "^11.1.1",
    "@fastify/static": "^8.3.0",
    "@fontsource/inter": "^5.2.8",
    "@prisma/client": "^6.19.0",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-query": "^5.90.10",
    "argon2": "^0.44.0",
    "chart.js": "^4.5.1",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "fastify-plugin": "^5.1.0",
    "pino": "^10.1.0",
    "react": "^19.2.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "telegraf": "^4.16.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-react": "^5.1.1",
    "c8": "^10.1.3",
    "eslint": "^9.39.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.2.0",
    "prisma": "^6.18.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/jest-dom": "^6.9.1",
    "tailwindcss": "^4.1.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.2.2",
    "vitest": "^4.0.10"
  },
  "engines": {
    "node": ">=24.11.1 <26"
  }
}
