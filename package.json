{
  "name": "bsuir-sport-marketing-bot",
  "version": "1.0.0",
  "description": "Telegram bot prototype for recommending educational sports sections based on user preferences and physical data.",
  "type": "module",
  "scripts": {
    "build": "bun x prisma generate && bun run build:admin && bun run build:bot",
    "build:admin": "bun x vite build --config admin/web/vite.config.ts",
    "build:bot": "bun x prisma generate && bun build src/index.ts --target bun --outfile dist/server.js",
    "postinstall": "bun x prisma generate",
    "heroku-postbuild": "bun run build",
    "migrate:deploy": "bun x prisma db push && bun x prisma db seed",
    "start": "bun dist/server.js",
    "dev": "bun x tsx src/index.ts",
    "dev:admin": "bun x vite dev --config admin/web/vite.config.ts",
    "dev:server": "bun x tsx src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "bun x eslint --ext .ts,.tsx src admin/web/src test",
    "coverage": "bun test --coverage",
    "coverage:ci": "bun test --coverage",
    "lock:migrate": "bun pm migrate",
    "start:node": "node dist/server.js",
    "build:admin:bun": "bun build admin/web/src/main.tsx --outdir admin/web/dist --minify --target=es2022"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.8",
    "@prisma/client": "^7.0.0",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-query": "^5.90.10",
    "chart.js": "^4.5.1",
    "react": "^19.2.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "telegraf": "^4.16.3",
    "zod": "^4.1.12"
  },
  "optionalDependencies": {
    "@prisma/adapter-pg": "^7.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@happy-dom/global-registrator": "^20.0.10",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-react": "^5.1.1",
    "bun-types": "^1.3.2",
    "c8": "^10.1.3",
    "eslint": "^9.39.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.2.0",
    "prisma": "^7.0.0",
    "tailwindcss": "^4.1.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.2.4"
  },
  "packageManager": "bun@1.3.2"
}
